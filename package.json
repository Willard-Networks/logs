{
    "name": "helix-logs",
    "version": "1.1.0",
    "description": "A logger for the Helix roleplaying framework written in Node.js with Typescript.",
    "repository": {
        "type": "git",
        "url": "https://github.com/wildflowericecoffee/helix-logs"
    },
    "author": "wildflowericecoffee",
    "license": "MIT",
    "scripts": {
        "build-sass": "sass src/public/css/main.scss dist/public/css/main.css",
        "build-ts": "tsc",
        "build": "npm run build-sass && npm run build-ts && npm run lint && npm run copy-static-assets",
        "copy-static-assets": "ts-node copyStaticAssets.ts",
        "debug": "npm run build && npm run watch-debug",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "serve-debug": "nodemon --inspect dist/server.js -e js,ejs",
        "serve": "node dist/server.js",
        "start": "npm run serve",
        "test": "jest --forceExit --coverage --verbose",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\"",
        "watch-node": "nodemon dist/server.js -e js,ejs",
        "watch-sass": "sass --watch src/public/css/main.scss dist/public/css/main.css",
        "watch-test": "npm run test -- --watchAll",
        "watch-ts": "tsc -w",
        "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\""
    },
    "dependencies": {
        "body-parser": "1.20.3",
        "compression": "1.7.5",
        "connect-redis": "^7.1.1",
        "cors": "^2.8.5",
        "dotenv": "16.4.5",
        "ejs": "^3.1.10",
        "errorhandler": "1.5.1",
        "express": "^4.21.1",
        "express-rate-limit": "^7.4.1",
        "express-session": "^1.18.1",
        "lusca": "1.7.0",
        "mysql2": "^3.11.4",
        "passport": "^0.7.0",
        "passport-steam": "^1.0.18",
        "redis": "^4.7.0",
        "sqlite": "^5.1.1",
        "sqlite3": "^5.1.7",
        "sqlstring-sqlite": "^0.1.1",
        "steamid": "^2.1.0",
        "winston": "3.17.0"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.2.0",
        "@eslint/js": "^9.15.0",
        "@types/compression": "^1.7.5",
        "@types/cors": "^2.8.17",
        "@types/errorhandler": "^1.5.3",
        "@types/express-session": "^1.18.0",
        "@types/jest": "^29.5.14",
        "@types/jquery": "^3.5.32",
        "@types/lusca": "^1.7.5",
        "@types/node": "^22.13.4",
        "@types/passport": "^1.0.17",
        "@types/passport-steam": "^1.0.6",
        "@types/shelljs": "^0.8.15",
        "@types/steamid": "^2.0.3",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^8.15.0",
        "@typescript-eslint/parser": "^8.15.0",
        "chai": "^5.1.2",
        "concurrently": "9.1.0",
        "eslint": "^9.15.0",
        "jest": "^29.7.0",
        "nodemon": "3.1.7",
        "sass": "^1.81.0",
        "shelljs": "0.8.5",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "typescript": "5.6.3"
    }
}
