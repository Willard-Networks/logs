{
    "name": "helix-logs",
    "version": "1.1.0",
    "description": "A logger for the Helix roleplaying framework written in Node.js with Typescript.",
    "repository": {
        "type": "git",
        "url": "https://github.com/wildflowericecoffee/helix-logs"
    },
    "author": "wildflowericecoffee",
    "license": "MIT",
    "scripts": {
        "build-sass": "sass src/public/css/main.scss dist/public/css/main.css",
        "build-ts": "tsc",
        "build": "npm run build-sass && npm run build-ts && npm run lint && npm run copy-static-assets",
        "copy-static-assets": "ts-node copyStaticAssets.ts",
        "debug": "npm run build && npm run watch-debug",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "serve-debug": "nodemon --inspect dist/server.js -e js,ejs",
        "serve": "node dist/server.js",
        "start": "npm run serve",
        "test": "jest --forceExit --coverage --verbose",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\"",
        "watch-node": "nodemon dist/server.js -e js,ejs",
        "watch-sass": "sass --watch src/public/css/main.scss dist/public/css/main.css",
        "watch-test": "npm run test -- --watchAll",
        "watch-ts": "tsc -w",
        "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\""
    },
    "dependencies": {
        "body-parser": "1.20.2",
        "compression": "1.7.4",
        "cookie-session": "^2.0.0",
        "cors": "^2.8.5",
        "dotenv": "16.1.4",
        "ejs": "^3.1.9",
        "errorhandler": "1.5.1",
        "express": "^4.18.2",
        "express-rate-limit": "^6.9.0",
        "express-session": "^1.17.3",
        "lusca": "1.7.0",
        "mysql2": "^3.4.0",
        "passport": "github:joeyguerra/passport#missing-regenerate-on-req",
        "passport-steam": "^1.0.18",
        "sqlite": "^4.2.1",
        "sqlite3": "^5.1.6",
        "sqlstring-sqlite": "^0.1.1",
        "steamid": "^2.0.0",
        "winston": "3.8.2"
    },
    "devDependencies": {
        "@types/compression": "^1.7.2",
        "@types/cookie-session": "^2.0.44",
        "@types/cors": "^2.8.13",
        "@types/errorhandler": "^1.5.0",
        "@types/express-session": "^1.17.7",
        "@types/jest": "^29.5.2",
        "@types/jquery": "^3.5.16",
        "@types/lusca": "^1.7.1",
        "@types/node": "^20.3.1",
        "@types/passport": "^1.0.12",
        "@types/passport-steam": "^1.0.1",
        "@types/shelljs": "^0.8.12",
        "@types/steamid": "^2.0.1",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.60.0",
        "@typescript-eslint/parser": "^5.60.0",
        "chai": "^4.3.7",
        "concurrently": "8.2.0",
        "eslint": "^8.43.0",
        "jest": "^29.5.0",
        "nodemon": "2.0.22",
        "sass": "^1.63.5",
        "shelljs": "0.8.5",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.3"
    }
}
